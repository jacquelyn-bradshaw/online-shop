<article id="product-item">
  <h2><%= product.title %></h2>
  <img src="/images/<%= product.image %>" alt="Product Image" />
  <div id="product-actions">
    <ul>
      <li><a id="btn" href="/products/<%= product._id %>">View Product</a></li>
      <% if (locals.isAdmin) { %>
      <li>
        <a id="btn" href="/products/<%= product._id %>/edit">Edit Product</a>
      </li>
      <li>
        <form action="/products/<%= product._id %>/delete" method="POST">
          <button class="btn btn-alt">Delete Product</button>
        </form>
      </li>
      <% } %>
    </ul>
  </div>
</article>
