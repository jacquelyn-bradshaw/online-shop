<html>
  <head>
    <%- include("includes/head.ejs", { title: "View Product" }) %>
    <link rel="stylesheet" href="/styles/base.css" />
    <link rel="stylesheet" href="/styles/products.css" />
  </head>
  <body>
    <header><%- include("includes/header.ejs") %></header>
    <main id="product-detail">
      <h1><%= product.title %></h1>
      <img src="/images/<%= product.image %>" alt="Image of the product" />
      <p><%= product.price %></p>
      <a id="btn" href="">Add to basket</a>
      <p><%= product.summary %></p>
    </main>
  </body>
</html>
